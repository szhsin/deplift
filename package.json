{
  "name": "deplift",
  "version": "1.2.4",
  "description": "CLI to update deps in monorepos",
  "author": "Zheng Song",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szhsin/deplift.git"
  },
  "homepage": "https://github.com/szhsin/deplift#readme",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./types/index.d.ts",
  "bin": {
    "deplift": "dist/cjs/index.cjs"
  },
  "sideEffects": false,
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "start": "run-p watch \"types -- --watch\"",
    "bundle": "rollup -c",
    "watch": "rollup -c -w",
    "clean": "rm -Rf dist types",
    "types": "tsc",
    "pret": "prettier -c .",
    "pret:fix": "prettier -w .",
    "prepare": "rm -Rf types/__tests__",
    "build": "run-s pret clean types bundle",
    "deplift": "node ./dist/cjs/index.cjs",
    "deplift:dry-run": "node ./dist/cjs/index.cjs --dry-run"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.3.0",
    "@types/yargs": "^17.0.35",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "rollup": "^4.58.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "yargs": "^18.0.0"
  }
}
